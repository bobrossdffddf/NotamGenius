# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Environment Configuration
NODE_ENV=production
DEBUG=false
VERBOSE=false

# Server Configuration (if needed)
HOST=0.0.0.0
PORT=8000

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false

# Optional: Performance Tuning for Raspberry Pi Zero
MAX_CONCURRENT_FORMS=5
FORM_CLEANUP_INTERVAL=900000
ENABLE_CACHING=true

# Optional: Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_COMMANDS_PER_MINUTE=5

# Optional: Feature Flags
ENABLE_FORM_VALIDATION=true
ENABLE_PREVIEW=true
ENABLE_STATISTICS=false
